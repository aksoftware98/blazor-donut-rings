@namespace AKSoftware.Components.Blazor

<div style="width:@Width;height:@Width;position:relative;">
	<Ring Width="100%" Height="100%" MaxValue="@FirstMaxValue"
		  RingGradient="@OutsideRingGradient" 
		  Value="@FirstValue"
		  style="position:absolute;margin-left:auto;margin-right:auto;left:0;right:0"/>

	<Ring Width="80%" Height="80%" MaxValue="@SecondMaxValue"
		  RingGradient="@CenterRingGradient" 
		  Value="@SecondValue"
		  style="position:absolute;margin-left:auto;margin-right:auto;left:0;right:0"/>
		  
	<Ring Width="60%" Height="60%" MaxValue="@ThirdMaxValue"
		  RingGradient="@SmallRingGradient" 
		  Value="@ThirdValue"
		  style="position:absolute;margin-left:auto;margin-right:auto;left:0;right:0"/>
</div>